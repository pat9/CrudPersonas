extends template.pug

block content
    table(class="table table-striped")
        thead
            tr
                th(scope="col") #
                th(scope="col") Nombre
                th(scope="col") Apellidos
                th(scope="col") Direcci√≥n
                th(scope="col") Sexo
                th(scope="col") Foto
                th(scope="col", colspan="2") Acciones
        tbody
            each persona in personas
                tr
                    th(scope="row")= persona._id
                    td= persona.nombre
                    td= persona.apellidos
                    td= persona.direccion
                    td= persona.sexo
                    td
                        img(src="/img/"+persona.foto, width="50px")
                    td
                        a(href="/Editar/"+persona._id) Editar
                    td
                        a(href="/Eliminar/"+persona._id) Eliminar